<div class="col-md-4 col-md-ooffset-4">
  <h2>Edit posts</h2>

  <hr>
  <%= simple_form_for [@group, @post] do |f| %>
  <div class="form-group">
    <%= f.input :content, input_html: { class: "form-control"} %>
  </div>
  <div class="form-actions">
    <%= f.submit "Submit", disable_with: "Submittiing...", class: "btn btn-primary" %>
  </div>
  <% end %>
</div>
